<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/calendar/:Nom/months/:Nombre/:number/acts/edit/{{actsL.ID_Act}}" method="POST">
                        <div class="form-group">
                            <input type="text" maxlength="20" minlength="1" required value="{{actsL.Title}}" name="Title" class="form-control" placeholder="Nombre de la Actividad" autofocus>
                        </div>
                        <div class="form-group">
                            <br><label >Hora de Inicio:</label>
                            <input type="time" required name="H_in" class="form-control" placeholder="Hora de Inicio">
                        </div>
                        <div class="form-group">
                            <br><label >Hora de Fin:</label>
                            <input type="time"  required name="H_fi" class="form-control" placeholder="Hora de Fin">
                        </div>
                        <div class="form-group">
                            <br><textarea name="Descrip" maxlength="30" minlength="0" rows="2" class="form-control" placeholder="Description">{{actsL.Descrip}}</textarea>
                        </div>
                         <div class="form-group">
                            <input type="hidden" name="mes" value="{{actsL.numMes}}" class="form-control"/>
                            <input type="hidden" name="cal" value="{{actsL.nom}}" class= "form-control">
                            <input type="hidden" name="num" value="{{actsL.number}}" class="form-control">
                            <input type="hidden" name="nomM" value="{{actsL.Nombre}}" class="form-control">
                         </div>
                                                    
                        <div class="form-group">
                            <br><button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>