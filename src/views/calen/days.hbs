<div class="container p-4">
    <div class="row">
        <div class="container text-center my-auto">
            <h1 class="mb-5">
                <em>{{Nombre}}</em>
            </h1>
        </div>
        {{#each day}}
        <div class="col-md-2 mt-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title text-uppercase">
                        {{Name}}
                    </h5>
                     <a href="/calendar/{{Nom}}/months/{{Nombre}}/{{number}}/acts"><img src="/img/{{number}}.png" alt="Logo Fazt" class="card-img-top mx-auto m-2 rounded-circle w-50"></a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>